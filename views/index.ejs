      <div class="container">
        <div class="sidebar">
          <ul>
            <li>
              <i class="fa-solid fa-house fa-xl"></i>
              <span>Главная</span>
            </li>
            <li>
              <i class="fa-solid fa-film fa-xl"></i>
              <span>Shorts</span>
            </li>
            <li>
              <i class="fa-solid fa-photo-film fa-xl"></i>
              <span>Подписки</span>
            </li>
            <li>
              <i class="fa-brands fa-square-youtube fa-xl"></i>
              <span>Библиотека</span>
            </li>
          </ul>
        </div>
        <div class="videosContainer">
          <%randomPosts.map(el => { %>
          <a
            href="http://localhost:8888/videos/exactVideo/<%= el.id%>"
            method="get">
            <div class="videos">
              <!-- a video starts -->
              <div class="video">
                <div class="thumbnail">
                  <video muted autoplay loop class="vid" width="280">
                    <source src="/uploads/<%= el.video%>" type="video/mp4" />
                    Your browser does not support HTML video.
                  </video>
                </div>
                <div class="details">
                  <div class="author">
                    <img src="/uploads/<%= el.userAvatar%>" alt="" />
                  </div>
                  <div class="title">
                    <h3><%= el.title%></h3>
                    <a href=""><%= el.username%></a>
                    <span>
                      <%= Math.floor(Math.random() * (1000 - 100 + 1) + 100) %>K
                      Views • <%= Math.floor(Math.random() * (10 - 1 + 1) + 1)
                      %> Months Ago
                    </span>
                  </div>
                </div>
              </div>
              <!-- a video Ends -->
            </div>
          </a>
          <%}) %>
        </div>
      </div>
    </main>
  </body>
  <script>
    let menuBtn = document.querySelector(".menu-btn");
    let menu = document.querySelector(".menu");

    menuBtn.addEventListener("click", function () {
      menuBtn.classList.toggle("active");
      menu.classList.toggle("active");
    });

    let hamburgerrBtn = document.querySelector(".hamburgerr-btn");
    let hamburgerr = document.querySelector(".hamburgerr");

    hamburgerrBtn.addEventListener("click", function () {
      hamburgerrBtn.classList.toggle("active");
      hamburgerr.classList.toggle("active");
    });

    let clip = document.querySelector(".vid");

    clip.addEventListener("mouseover", function (e) {
      clip.play();
    });

    clip.addEventListener("mouseout", function (e) {
      clip.pause();
    });
  </script>
</html>
